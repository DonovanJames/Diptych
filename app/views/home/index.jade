extends ../layout

block content
    div.content(ng-controller='RootController')
    div.row
        h1.cn Diptych
        a(href="/gallery") Gallery
        div.col-lg-12
            div.zone.hate
                span.glyphicon.icons-dance3(title='Skip These', ng-click="toss(images)")
            div.zone.love
                span.glyphicon.icons-dance1(title='Save Both', ng-click="pair(images)")
        section( image-pair )


